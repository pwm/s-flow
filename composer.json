{
    "name": "pwm/s-flow",
    "description": "A lightweight library for defining state machines that supports conditional transitions",
    "type": "library",
    "keywords": ["fsm", "state-machine", "event-sourcing"],
    "homepage": "https://github.com/pwm/s-flow",
    "license": "MIT",
    "authors": [
        {
            "name": "Zsolt Szende",
            "email": "zs@szende.me"
        }
    ],
    "require": {
        "php": ">=7.1.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "phpstan/phpstan": "^0.7.0",
        "phpunit/phpunit": "^6.1",
        "infection/infection": "^0.8.2"
    },
    "autoload": {
        "psr-4": {
            "Pwm\\SFlow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pwm\\SFlow\\": "tests/unit/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs --standard=PSR2 --warning-severity=0 src",
        "phpstan": "vendor/bin/phpstan analyse --ansi -l 7 src",
        "infection": "vendor/bin/infection --log-verbosity=2 --only-covered"
    }
}
